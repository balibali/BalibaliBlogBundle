{% extends "Balibali\\BlogBundle::layout" %}
{% block title %}Recent Posts{% endblock %}
{% block content %}

<h1>{% display title %}</h1>

{% if posts %}
<ul>
{% for post in posts %}
<li>{{ post.publishedAt.format('Y-m-d') }}
<a href="{% route 'balibali_blog_frontend_show' with ['id': post.id] %}">{{ post.title }}</a></li>
{% endfor %}
</ul>
{% endif %}

{% endblock %}
