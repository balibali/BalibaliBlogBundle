{% extends config.layout %}
{% block head %}<link rel="alternate" type="application/rss+xml" title="Recent Posts" href="{% route 'balibali_blog_frontend_feed' with ['_format': 'xml'] %}">{% endblock %}
{% block title %}{{ post.title }}{% endblock %}
{% block content %}

<div class="post">
<h1>{% display title %}</h1>
<div class="date">{{ post.publishedAt.format('F d, Y') }}</div>
<div class="body">{{ post.body|safe }}</div>
</div>

<p><a href="{% route 'balibali_blog_frontend_index' %}">Back to Index</a></p>

{% endblock %}
