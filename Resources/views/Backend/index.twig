backend index

{% if posts %}
<table>
<tr>
<th>Title</th>
<th>Published at</th>
<th colspan="2"></th>
</tr>
{% for post in posts %}
<tr>
<td>{{ post.title }}</td>
<td>{{ post.publishedAt.format('Y-m-d H:i:s') }}</td>
<td><a href="{% route 'balibali_blog_backend_edit' with ['id': post.id] %}">Edit</a></td>
<td>
<form action="{% route 'balibali_blog_backend_delete' with ['id': post.id] %}" method="post">
{{ form.renderHiddenFields|safe }}
<input type="submit" value="Delete">
</form>
</td>
</tr>
{% endfor %}
</table>
{% endif %}

<div>
<a href="{% route 'balibali_blog_backend_new' %}">New Post</a>
</div>
